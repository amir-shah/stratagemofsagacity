{
  "name": "Stratagem of Sagacity - Godot Dev",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/app",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "geequlim.godot-tools",
        "neikeq.godot-csharp-vscode"
      ],
      "settings": {
        "godot_tools.gdscript_lsp_server_port": 6005,
        "godot_tools.editor_path": "/opt/godot/Godot_v4.3-stable_mono_linux.x86_64",
        "omnisharp.useModernNet": true,
        "dotnet.defaultSolution": "SoS_Godot.sln"
      }
    }
  },

  "forwardPorts": [8000, 8080, 6005],

  "postCreateCommand": "echo 'Dev container ready! Run ./scripts/run-editor.sh to launch Godot editor.'",

  "remoteUser": "root",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  }
}
